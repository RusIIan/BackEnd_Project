@model AboutPeoplePhoto

<div class="container">
    <h1>Slider Details</h1>
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Description</th>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Description</td>
                    <td>@Model.Name</td>
                    <td>@Model.Surname</td>
                    <td>
                        <img src="~/images//dbphoto/@Model.Img" width="200px" height="150px" />
                    </td>
                    <a asp-action="Index" class="btn btn-outline-danger btn-light">Cancel</a>
                </tr>
            </tbody>
        </table>
    </div>
</div>