@model CreateHeaderInfoVM
<div class="container">
    <h1 class="text-center my-2">Create Slider</h1>
    <div class="row">
        <form asp-action="HeaderInfoCreate" method="post" class="forms-sample my-2" enctype="multipart/form-data">
            <div class="form-group">
                <input asp-for="Information" class="form-control" placeholder="Information">
            </div>
            <button type="submit" class="btn btn-outline-success me-2">Submit</button>
            <a asp-action="HeaderInfoIndex" class="btn btn-outline-danger btn-light">Cancel</a>
        </form>
    </div>
</div>