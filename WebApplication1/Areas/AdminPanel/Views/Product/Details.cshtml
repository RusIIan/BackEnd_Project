@model Product

<div class="container">
    <h1>Slider Details</h1>
    <div class="row">
        <div>
            <img src="~/images//dbphoto/@Model.Image" width="200px" height="200px" />
            <h1>@Model.Name</h1>
            <h2>@Model.Price</h2>
            <h3>@Model.Star</h3>
            <h3>@Model.Decription</h3>
            <h3>@Model.Category.Type</h3>
            <h3>@Model.ProductColor.Name</h3>
            <a asp-action="Index" class="btn btn-outline-danger btn-light">Cancel</a>
        </div>
    </div>
</div>